{
  "extends": [
    "eslint:recommended",
    "defaults",
    "defaults/rules/eslint/style/airbnb"
  ],
  "plugins": ["node"],
  "env": {
    "node": true
  },

  "rules": {
    "node/no-missing-import": 2,
    "node/no-missing-require": 2,
    "node/no-unsupported-features": [2, {"version": 4}],
    "node/shebang": 2,

    "func-names": 0
  }
}
